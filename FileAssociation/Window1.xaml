<Window x:Class="FileAssociation.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="添加到.txt关联" Height="400" Width="600" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="textbox" Height="330" VerticalAlignment="Top"/>
        <Button x:Name="add" Height="25" Width="80" Content="添加关联" HorizontalAlignment="Right" Margin="0,0,98,6" VerticalAlignment="Bottom" Click="add_Click" />
        <Button x:Name="clear" Height="25" Width="80" Content="删除关联" HorizontalAlignment="Right" Margin="0,0,12,6" VerticalAlignment="Bottom" Click="clear_Click" />
    </Grid>
</Window>
